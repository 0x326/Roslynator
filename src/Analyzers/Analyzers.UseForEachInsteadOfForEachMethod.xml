<?xml version="1.0" encoding="utf-8"?>
<Analyzers>
  <Analyzer Identifier="UseForEachInsteadOfForEachMethod" IsDevelopment="true">
    <Id>RCS_UseForEachInsteadOfForEachMethod</Id>
    <Title>Use 'foreach' instead of 'ForEach' method.</Title>
    <Category>Readability</Category>
    <DefaultSeverity>Hidden</DefaultSeverity>
    <IsEnabledByDefault>true</IsEnabledByDefault>
    <Samples>
      <Sample>
        <Before><![CDATA[list.ForEach(item => M(item));]]></Before>
        <After><![CDATA[foreach var item in list
{
    M(item);
}]]></After>
      </Sample>
      <Sample>
        <Before><![CDATA[Array.ForEach(items, item => M(item));]]></Before>
        <After><![CDATA[for (int i = 0; i < items.Length; i++)
{
    M(items[i]);
}]]></After>
      </Sample>
    </Samples>
  </Analyzer>
</Analyzers>